{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/__tests__/**/*.ts",
    "src/**/*.spec.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules"]
}
